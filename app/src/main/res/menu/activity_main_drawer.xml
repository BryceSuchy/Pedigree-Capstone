<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="navigation_view">

    <group
        android:checkableBehavior="single"
        android:id="@+id/presets">
        <item
            android:id="@+id/add_preset"
            android:icon="@drawable/ic_add_box_black_24px"
            android:title="Add Preset" />
        <group>
            <item
                android:id="@+id/radio1"
                android:checkable="true"
                android:inputType="phone"
                android:title="Preset 1"
                app:actionViewClass="android.widget.RadioButton" />
            <item
                android:id="@+id/radio2"
                android:checkable="true"
                android:title="Preset 2"
                app:actionViewClass="android.widget.RadioButton" />
        </group>
        <item
            android:id="@+id/delete_preset"
            android:icon="@drawable/ic_delete_black_24px"
            android:title="Delete Preset" />
        <item
            android:id="@+id/download_csv"
            android:icon="@drawable/ic_file_download_black_24px"
            android:title="Download CSV" />
    </group>

    <group android:id="@+id/metrics">
        <item
            android:checkable="false"
            android:title="Displays"></item>
    </group>

</menu>
